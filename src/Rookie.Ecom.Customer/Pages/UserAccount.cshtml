@model Rookie.Ecom.Customer.Pages.UserAccountModel
@{
}
<!-- Cart Total Page Begin -->
<section class="cart-total-page spad">
    <div class="container">
        <form method="post" asp-page-handler="Account" class="checkout-form">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Your Information</h3>
                </div>
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <label asp-for="FirstName">First Name</label>
                            <input name = "FirstName" type="text" class="form-control" placeholder="Enter your first name" asp-for="FirstName" autofocus required>
                        </div>
                        <div class="col-lg-6 form-group">
                            <label asp-for="LastName">Last Name</label>
                            <input name = "LastName" type="text" class="form-control" placeholder="Enter your last name" asp-for="LastName" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10 form-group">
                        <label asp-for="Gender">Gender</label>
                        <select name = "Gender" class="cart-select country-usa">
                        <option value = "Male">Male</option>
                        <option value = "Femail">Female</option>
                        </select>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <label asp-for="Email">Email</label>
                            <input name = "Email" type="email" class="form-control" placeholder="Enter your email" asp-for="Email" required>
                        </div>
                    </div>

                    @*<input name="Gender" value = "1" hidden></input>*@
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <label asp-for="PhoneNumber">Phone Number (Format: 0123456789)</label>
                            <input name = "PhoneNumber" type="tel" pattern="[0-9]{10}" class="form-control" placeholder="Enter your phone number" asp-for="PhoneNumber" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="payment-method">
                        <button type="submit">Confirm Your Infomation</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Cart Total Page End -->